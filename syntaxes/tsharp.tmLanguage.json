{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tsharp",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#numeric"
		},
		{
			"include": "#boolean"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tsharp",
				"match": "\\b(if|do|for|end|else|break)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "support.function.tsharp",
				"match": "\\b(block|call)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.tsharp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tsharp",
					"match": "\\\\."
				}
			]
		},
		"numeric": {
			"patterns": [{
				"name": "constant.numeric.tsharp",
				"match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b"
			}]
		},
		"boolean": {
			"patterns": [{
				"name": "constant.language.boolean.tsharp",
				"match": "\\b(true|false)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.number-sign.tsharp",
				"match": "#.*$"
			}]	
		},
		"operators": {
			"patterns": [{
				"name": "entity.name.tag.tsharp",
				"match": "\\b(dup|push|drop|exit|print|swap|inc|dec|over|rot|typeof|import)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type.tsharp",
				"match": "\\b(int|bool|string)\\b"
			}]
		}
	},
	"scopeName": "source.tsharp"
}